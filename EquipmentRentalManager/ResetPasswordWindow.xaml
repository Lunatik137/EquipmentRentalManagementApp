<Window x:Class="EquipmentRentalManager.ResetPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EquipmentRentalManager"
        mc:Ignorable="d"
        Title="ResetPasswordWindow" Height="300" Width="400">
    <StackPanel Margin="20">
        <TextBlock Text="Email hoặc số điện thoại:"/>
        <TextBox x:Name="txtContact" Margin="0,5"/>

        <TextBlock Text="Mật khẩu mới:"/>
        <PasswordBox x:Name="txtNewPassword" Margin="0,5"/>

        <Button Content="Cập nhật" Click="BtnUpdatePassword_Click" Margin="10"/>
    </StackPanel>
</Window>
