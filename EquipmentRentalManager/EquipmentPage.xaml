<UserControl x:Class="EquipmentRentalManager.EquipmentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EquipmentRentalManager"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      >

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="txtSearch" Width="250" Height="30" Margin="0 0 0 10"
                 TextChanged="txtSearch_TextChanged"/>

        <DataGrid x:Name="dgEquipments" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True"
                  SelectionMode="Single" Margin="0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding EquipmentId}" Width="50"/>
                <DataGridTextColumn Header="Tên thiết bị" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Loại" Binding="{Binding Category}" Width="100"/>
                <DataGridTextColumn Header="Giá/ngày" Binding="{Binding DailyRate}" Width="100"/>
                <DataGridTextColumn Header="Còn lại" Binding="{Binding QuantityAvailable}" Width="80"/>
                <DataGridTextColumn Header="Trạng thái" Binding="{Binding Status}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
