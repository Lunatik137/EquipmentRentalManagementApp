<UserControl x:Class="EquipmentRentalManager.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EquipmentRentalManager"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Width="400">
            <TextBlock Text="Họ tên:"/>
            <TextBox x:Name="txtName" Margin="0 5 0 10"/>

            <TextBlock Text="Email:"/>
            <TextBox x:Name="txtEmail" Margin="0 5 0 10"/>

            <TextBlock Text="Số điện thoại:"/>
            <TextBox x:Name="txtPhone" Margin="0 5 0 10"/>

            <TextBlock Text="Mật khẩu:"/>
            <PasswordBox x:Name="txtPassword" Margin="0 5 0 10"/>

            <Button Content="Cập nhật" Width="120" Click="BtnUpdate_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
